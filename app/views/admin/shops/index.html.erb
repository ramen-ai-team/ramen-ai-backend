<h1>ショップ一覧</h1>

<div class="mb-3">
  <%= link_to "新規作成", new_admin_shop_path, class: "btn btn-primary" %>
</div>

<table class="table">
  <thead>
    <tr>
      <th>ID</th>
      <th>名前</th>
      <th>住所</th>
      <th>Google Map URL</th>
      <th>作成日</th>
      <th>アクション</th>
    </tr>
  </thead>
  <tbody>
    <% @shops.each do |shop| %>
      <tr>
        <td><%= shop.id %></td>
        <td><%= shop.name %></td>
        <td><%= shop.address %></td>
        <td><%= link_to "地図を見る", shop.google_map_url, target: "_blank" %></td>
        <td><%= shop.created_at.strftime("%Y/%m/%d") %></td>
        <td>
          <%= link_to "詳細", admin_shop_path(shop), class: "btn btn-sm btn-outline-primary" %>
          <%= link_to "編集", edit_admin_shop_path(shop), class: "btn btn-sm btn-outline-secondary" %>
          <%= link_to "削除", admin_shop_path(shop), method: :delete, 
                      confirm: "本当に削除しますか？", 
                      class: "btn btn-sm btn-outline-danger" %>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<% if @shops.empty? %>
  <p>ショップが登録されていません。</p>
<% end %>
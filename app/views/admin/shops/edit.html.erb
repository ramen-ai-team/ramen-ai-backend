<h1>ショップ編集</h1>

<%= form_with model: [:admin, @shop], local: true do |form| %>
  <% if @shop.errors.any? %>
    <div class="alert alert-danger">
      <ul class="mb-0">
        <% @shop.errors.full_messages.each do |message| %>
          <li><%= message %></li>
        <% end %>
      </ul>
    </div>
  <% end %>

  <div class="mb-3">
    <%= form.label :name, "ショップ名", class: "form-label" %>
    <%= form.text_field :name, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.label :address, "住所", class: "form-label" %>
    <%= form.text_area :address, class: "form-control", rows: 3 %>
  </div>

  <div class="mb-3">
    <%= form.label :google_map_url, "Google Map URL", class: "form-label" %>
    <%= form.url_field :google_map_url, class: "form-control" %>
  </div>

  <div class="mb-3">
    <%= form.submit "更新", class: "btn btn-primary" %>
    <%= link_to "詳細", admin_shop_path(@shop), class: "btn btn-secondary" %>
    <%= link_to "一覧", admin_shops_path, class: "btn btn-outline-secondary" %>
  </div>
<% end %>